<div class="create-post-c">
<h2>Create a post</h2>

<%= form_with model: @post, url: user_posts_path, scope: :post, html: {class: "post-form-c"} do |form| %>
    <%= form.text_field :title, placeholder: "Title", required: true, class: "post-title-c" %>
    <%= form.text_area :text, placeholder: "Type here...", row: 20, required: true, class: "post-text-c" %>
    <%= form.submit "post", class: "submit-btn" %>
<% end %>
</div>